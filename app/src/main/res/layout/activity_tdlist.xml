<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TDList"
    android:orientation="vertical"
    android:background="@drawable/black_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="All"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:background="@color/hGrey"
            android:textColor="@color/dGrey"
            android:id="@+id/codeAll"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Red"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:background="@color/hRed"
            android:textColor="@color/dRed"
            android:id="@+id/codeRed"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Blue"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:background="@color/hBlue"
            android:textColor="@color/dBlue"
            android:id="@+id/codeBlue"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Yellow"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:background="@color/hYellow"
            android:textColor="@color/hGrey"
            android:id="@+id/codeYellow"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listViewTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="116dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="51dp"
            android:layout_marginEnd="35dp"
            android:background="#66CC00"
            android:fontFamily="casual"
            android:text="Add new"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>