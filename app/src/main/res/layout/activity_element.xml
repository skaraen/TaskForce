<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Element"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/black_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heading"
        android:fontFamily="monospace"
        android:textSize="35dp"
        android:id="@+id/eTextHeading"
        android:textColor="#000000"
        android:background="#C0C0C0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mr . and Mrs . Dursley , of number four , Privet Drive , were proud to say that they were perfectly normal , thank you very much . They were the last people you'd expect to be involved in anything strange or mysterious , because they just didn't hold with such nonsense ."
        android:textSize="16dp"
        android:fontFamily="casual"
        android:id="@+id/eTextDscrptn"
        android:textColor="#000000"
        android:background="#C0C0C0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/eUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="#66CC00"
            android:text="Update" />

        <Button
            android:id="@+id/eDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="53dp"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="#66CC00"
            android:text="Delete" />
    </RelativeLayout>


</LinearLayout>